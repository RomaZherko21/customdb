{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/query": {
            "post": {
                "description": "Выполняет SQL запрос и возвращает результат",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "query"
                ],
                "summary": "Выполнить SQL запрос",
                "parameters": [
                    {
                        "description": "SQL запрос",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/handlers.SqlQueryRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/handlers.SqlQueryResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/handlers.SqlQueryResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "handlers.SqlQueryRequest": {
            "type": "object",
            "required": [
                "query"
            ],
            "properties": {
                "query": {
                    "type": "string",
                    "example": "INSERT INTO users (id, name) VALUES (1, 'John');"
                }
            }
        },
        "handlers.SqlQueryResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "Invalid SQL syntax"
                },
                "result": {
                    "type": "string",
                    "example": "Query executed successfully"
                },
                "success": {
                    "type": "boolean",
                    "example": true
                }
            }
        }
    }
}